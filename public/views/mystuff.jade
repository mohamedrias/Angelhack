.container.stuff
    .col-xs-2.leftbar
        h3 Items
        ul
            li
                input(type='checkbox' value='')
                span All Items
            li
                input(type='checkbox' value='late')
                span Past Due Items
            li
                input(type='checkbox' value='returned')
                span Returned Items
            br
        h3 Categories
        ul
            li
                input(type='checkbox' value='electronics')
                span Electronics
            li
                input(type='checkbox' value='tools')
                span Tools
            li
                input(type='checkbox' value='games')
                span Video Games
    .col-xs-10
        .row
            .col-xs-4
            .col-xs-4.togglebuttons
                button.btn.disabled(ng-click"mine()") mystuff
                button.btn.active(ng-click="theirs()") theirstuff
        .row.text-center
            .col-xs-8-offset-2
                input.searchbar(placeholder=" Search" ng-model="search")
        .row
            .container-fluid.text-center
                .col-xs-3.nopad(ng-repeat="item in items | filter:search")
                    div.griditem(ng-style="{'background-image':'url(http://cdn.blessthisstuff.com/imagens/stuff/kriega-r20-backpack-2.jpg)'}")
                        div.overlay
                            div(ng-class="{ 'redwrap' : item.notifications, 'wrapper' : !item.notifications}")
                            a(data-toggle='modal', data-target='#notimodal')
                                h2 {{item.item}}
                                div.details
                                    h3 {{item.weeksout}}
                                    p(ng-show="item.notifications") {{item.notifications}} notifications
                                    img.img-circl(ng-src="item.borrowpic")


    #notimodal.modal.fade
        .modal-dialog
            img(src='https://slack-files.com/files-tmb/T06AEQG2D-F06AVHL4W-cf25aa8c42/11354727_1096377437057397_749293979_n_360.png')
            div.notihalf
                h3 Sleeping Bag
                h4 Tommy Beard
                p Borrowed 4/23/2015
                button.btn.btn-danger(type='button', data-dismiss='modal') Notify
                button.btn.btn-success(type='button', data-dismiss='modal') Returned

